<% provide(:title, "Edit Profile") %>
<h2>Edit Profile</h2>

<% if @current_user.errors.size > 0 %>
	<div class='alert alert-danger'>
		<strong> Error : </strong> <%= @current_user.errors.full_messages.first %>
	</div>
<% end %>

 
 <%= form_for @current_user do |f| %>

		    <label>My Avatar</label><BR>
		    <%if @current_user.avatar%>
		    	<%= image_tag(@current_user.avatar_url, :class => 'img img-rounded profile-img')%><BR>
		    <%else%>
		    	<img class='img img-rounded profile-img' src='<%=@current_user.avatar.url%>'/><BR>
		    <%end%>
		    <BR>
 		    <%= f.file_field :avatar %><BR><BR>
		    <%= f.hidden_field :avatar_cache %>
			<p>
			<B>Customer ID</B><BR>
			<div class='green'><%= @current_user.customer_id%></div>
			</p>

			<p>
			<B>Username</B><BR>
			<div><%= @current_user.username%></div>
			</p>

			<BR>
			<p><B>Gender</B>
			 	<ul style='list-style: none'>
			 	<li><%= f.radio_button :gender, 'M' %> 
			  	<%= label :male, 'Male' %></li>
			  	<li><%= f.radio_button :gender, 'F' %>
			  	<%= label :female, 'Female' %></li>
			  	<li><%= f.radio_button :gender, 'T' %>
			  	<%= label :female, 'Third Gender' %></li>			  	
			  	<li><%= f.radio_button :gender, 'N' %>
			  	<%= label :female, 'Prefer not to say' %></li>
			  	</ul>

			</p>


			<p>
			<%= f.label :firstname %><br>
			<%= f.text_field :firstname, :class => 'form-control' %>
			</p>

			<p>
			<%= f.label :lastname %><br>
			<%= f.text_field :lastname, :class => 'form-control' %>
			</p>

			<p>
			<%= f.label :mobile %><br>
			<%= f.text_field :mobile, :class => 'form-control' %>
			</p>

			<p>
			<%= f.label :email %><br>
			<%= f.text_field :email, :class => 'form-control' %>
			</p>

			<p>
			<%= f.label :address %><br>
			<%= f.text_area(:address, :class => 'form-control', :rows => "3") %>
			</p>

			<p>
			<%= f.label :pin %><br>
			<%= f.text_field :pin, :class => 'form-control' %>
			</p>

			<p>
			<%= f.text_field :city, :class => 'form-control', placeholder: "Enter City" %>
			</p>

			<p>
			<%= f.label :country %><br>
			<%= f.text_field :country, :class => 'form-control' %>
			</p>


			<%= f.button :submit, class: "btn btn-primary" do %>
		  		<span class='glyphicon glyphicon-circle-arrow-up'></span> Update
			<% end %>

<% end %>