<% provide(:title, "Change Password") %>
<div class='page-header'><h1>Change Password</h1></div>

	<% if @current_user.errors.size > 0 %>
		<div class='alert alert-danger'>
			<strong> Error : </strong> <%= @current_user.errors.full_messages.first %>
		</div>
	<% end %>

 
 <%= form_for @current_user, :html => {:class => "main_contents"} do |f| %>

	<p>
	<B>Username</B><BR>
	<div><%= @current_user.username%></div>
	</p>

	<p>
	<%= f.label :oldpassword , "Existing Password"%><br>
	<%= f.password_field :oldpassword, :class => 'form-control' %>
	</p>

	<p>
	<%= f.label :password , "New Password" %><br>
	<%= f.password_field :password, :class => 'form-control' %>
	</p>

	<p>
	<%= f.label :password_confirmation, "Confirm Password" %><br>
	<%= f.password_field :password_confirmation, :class => 'form-control' %>
	</p>

	<%= f.button :submit, class: "btn btn-primary" do %>
  		<span class='glyphicon glyphicon-circle-arrow-up'></span> Change Password
	<% end %>

<% end %>