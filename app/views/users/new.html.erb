<% provide(:title, "New User Sign Up") %>
  <% if @user.errors.any? %>
    <div class='alert alert-danger'>
      <strong> Error(s) : </strong> 
      <% for message_error in @user.errors.full_messages %>
        <li>* <%= message_error %></li>
      <% end %>
      </ul>
      </div>
  <% end %>


<div class='col-md-5'>

    <div class='page-header'><h1>Sign Up</h1></div>
    <div class="Sign_Form main_contents">
      <%= form_for(:user, :url => {:controller => 'users', :action => 'create'} ) do |f| %>

        <%= f.hidden_field :customer_id %>
        <p> Username:</br> <%= f.text_field :username, :class => 'form-control'%> </p>
        <p> Email:</br> <%= f.text_field :email, :class => 'form-control'%> </p>
        <p> Password:</br> <%= f.password_field :password , :class => 'form-control'%></p>
        <p> Password Confirmation:</br> <%= f.password_field :password_confirmation, :class => 'form-control'%> </p><BR>
        <%= submit_tag("Sign Up", :class => "btn btn-success")%>
      <% end %>
    </div>

</div>