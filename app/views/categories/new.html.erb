<% provide(:title, "New Category") %>
<div class='page-header'><h1>Create New Category</h1></div>

<% if @category.errors.size > 0 %>
	<div class='alert alert-danger'>
		<strong> Error(s) : </strong> 
		<ul>
		<% @category.errors.full_messages.each do |f| %>
			<li><%=f%></li>
		<%end%>
		</ul>		
	</div>
<% end %>

<BR>

<%= form_for @category do |f| %>
	<p>
		<%= f.label :name %><br>
		<%= f.text_field :name , :class => 'form-control' %>
	</p>

	<p>
		<%= f.label :description %><br>
		<%= f.text_area :desc , :rows => 5,  :class => 'form-control' %>
	</p>
<BR>
		<%= f.button :submit, class: "btn btn-primary" do %>
		  <span class='glyphicon glyphicon-circle-arrow-up'></span> Submit
		<% end %>


<% end %>
