<% provide(:title, "New") %>
<div class='well'>Add a New Task</div>
<%= form_for @task do |f| %>
	<p>
		<%= f.label :Task %><br>
		<%= f.text_field :title %>
			<div class='errormesg'><%= @task.errors.full_messages.first if @task.errors.any? %></div>
			</p>
			
			<p>
		<%= f.label :Remarks %><br>
		<%= f.text_area :remarks %>
			<div class='errormesg'><%= @task.errors.full_messages.first if @task.errors.any? %></div>
</p>
<p>
		<%= f.label :Assign_To %><br>
		<%= f.text_field :owner %>
			<div class='errormesg'><%= @task.errors.full_messages.first if @task.errors.any? %></div>
</p>
<p>
		<%= f.label :Priority %><br>
		<%= f.text_field :priority %>
			<div class='errormesg'><%= @task.errors.full_messages.first if @task.errors.any? %></div>
</p>
<p>
		<%= f.label :Task %><br>
		<%= f.text_field :title %>
			<div class='errormesg'><%= @task.errors.full_messages.first if @task.errors.any? %></div>
</p>
			<p>
		<%= f.label :category_id %><br>
		<%= f.collection_select(:category_id, Category.all, :id, :name) %>
	</p>

		<p><%= f.label :Due_By %><br>
		<%= f.text_field :due_date, :id => "datetimepicker1"%>			
			<div class='errormesg'><%= @task.errors.full_messages.first if @task.errors.any? %></div>
			</p>

	<%= f.submit "Add Task" , class: "btn btn-primary"  %>
<% end %>